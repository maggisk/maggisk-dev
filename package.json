{
  "name": "maggisk",
  "version": "1.0.0",
  "scripts": {
    "start": "npm run watch",
    "format": "elm-format src/ --yes",
    "clean": "rm -rf dist && mkdir dist",
    "watch": "npm run clean && npm-run-all --parallel --print-label watch:**",
    "watch:css": "node-sass --watch src/css/app.sass dist/css/app.css",
    "watch:elm": "chokidar 'src/**/*.elm' -c 'elm make src/Main.elm --output dist/js/elm.js' --initial",
    "watch:js": "chokidar 'src/js/**/*.js' -c 'esbuild --bundle src/js/app.js --outfile=dist/js/app.js --sourcemap' --initial",
    "watch:server": "live-server --port=1234 --mount=/:static dist",
    "build": "npm run clean && cp -r static/* dist && npm-run-all --parallel --print-label build:**",
    "build:css": "node-sass --output-style=compressed src/css/app.sass dist/css/app.css",
    "build:elm": "elm make src/Main.elm --optimize --output dist/js/elm.js && npm run minify",
    "build:js": "esbuild --bundle src/js/app.js --outfile=dist/js/app.js --minify",
    "minify": "uglifyjs dist/js/elm.js --compress 'pure_funcs=\"F2,F3,F4,F5,F6,F7,F8,F9,A2,A3,A4,A5,A6,A7,A8,A9\",pure_getters,keep_fargs=false,unsafe_comps,unsafe' | uglifyjs --mangle --output=dist/js/elm.js"
  },
  "license": "ISC",
  "dependencies": {
    "delayed-scroll-restoration-polyfill": "^0.1.1",
    "elm": "^0.19.1-3",
    "esbuild-linux-64": "0.0.6",
    "node-sass": "^4.13.1",
    "npm-run-all": "^4.1.5",
    "uglify-js": "^3.7.7"
  },
  "devDependencies": {
    "chokidar-cli": "^2.1.0",
    "elm-format": "^0.8.2",
    "live-server": "^1.2.1"
  }
}
